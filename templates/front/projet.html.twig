{% extends "base.html.twig" %}

{% block title "tous nos biens"%}

{% block body %}

<div class='container'>
    <h2> Tous les biens</h2>
   <div class="row flex mb-3" >
        {% for proj in projetss %}
            <div class="col-3">
                <div class="card">
                       {% if proj.filename %}
                      <img src="{{ vich_uploader_asset(proj, 'imageFile')  }}" alt="card-img-top" style="width: 100%; height:170px;">
                       {% else %}
                        <img src="{{ 'assets/img/Ixina.jpg'  }}" alt="card-img-top" style="width: 100%; height:170px;">
                       {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('front.show', {id: proj.id, slug: proj.slug}) }}">{{ proj.nom }}</a>
                            </h5>
                            
                        <p class="card-text">{{ proj.description }}</p>
                           <p class="card-text">{{ proj.user.nom }}</p>
                       
                        <div class='text-primary'>{{proj.budget | number_format (0,'',' ' )}} euros</div>
                            </div>
                            </div>
                            </div>
        {% endfor %}

        <div class="pagination">
                {{ knp_pagination_render(projetss) }}
            </div>
       {% endblock %}