{% extends 'baseAdmin.html.twig' %}



{% block title 'Gerer les Projets' %}

{% block body %}
<div class='container mt-4'>

<div class="row justify-content-center">
       <div class="col-lg-8 col-md-8 col text-center mb-4">
                    <h6 class="text-primary font-weight-normal text-uppercase mb-3">Espace Utilisateur</h6>
                    <h3 class="mb-4">Gérer mes Projets</h3>
                </div>
            </div>


    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
            </div>
    {% endfor %}

            <div class="col-lg-12 col-md-8 col text-center mb-4">

        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for proj in projets %}

                    <tr>
                        <td>{{proj.nom }}</td>
                        <td>
                            <a href="{{ path ('admin.edit', {id: proj.id} ) }}" class="btn btn-secondary">Editer</a>
                            <a href="{{ path ('admin.delete', {id: proj.id} ) }}" class="btn btn-danger">Supprimer</a>
                           
                        </td>

                    </tr>
                     {% endfor %}
        </table>
</div>
        <div class="text-right">
             <a href="{{ path ('admin.create') }}" class="btn btn-primary mr-4" style="margin-bottom: 40px" >Créer un nouveau projet</a>
             </div>
          

        
    </div>
    </div>


{% endblock %}

